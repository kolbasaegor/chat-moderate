<inline-markup id="concierge_chats_markup">
    <column collection="available_chats">
        <button id="btn_choose_chat" args="chat_id"/>
    </column>
    <row collection="buttons">
        <button id="btn_chats_prev" args="name"/>
        <button id="btn_chats_next" args="name"/>
    </row>
    <row collection="response">
        <button id="btn_send_response"/>
    </row>
    <row>
        <button id="btn_reject_request"/>
    </row>
</inline-markup>
